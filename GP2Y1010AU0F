import spidev
import RPi.GPIO as gpio
import time
import wiringpi

spi = spidev.SpiDev()
spi.open(0,0)
spi.max_speed_hz = 5000

wiringpi.wiringPiSetupPhys()
wiringpi.pinMode(12, 2)
wiringpi.pwmSetClock(100)
wiringpi.pwmWrite(12, 33)

time.sleep(0.00028)
	
	while True:
  
		antwort = spi.xfer([1,128,0])
		if 0 <= antwort[1] <= 3:
			wert = ((antwort[1] * 256) + antwort[2]) * 0.003222
			print("Spannung: ", wert)
			time.sleep(1)
	    
	gpio.cleanup
